{
  "name": "catalog-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/catalog-ui/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/catalog-ui",
        "configFile": "apps/catalog-ui/vite.config.ts"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "catalog-ui:build",
        "configFile": "apps/catalog-ui/vite.config.ts"
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "catalog-ui:build",
        "configFile": "apps/catalog-ui/vite.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "maxWarnings": 0
      }
    },
    "lint:fix": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "apps/catalog-ui/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "test:coverage": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "configFile": "apps/catalog-ui/vitest.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "coverage/apps/catalog-ui"
      }
    },
    "test:watch": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "apps/catalog-ui/vitest.config.ts",
        "passWithNoTests": true,
        "watch": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vue-tsc --noEmit -p apps/catalog-ui/tsconfig.app.json"
      }
    }
  }
}
